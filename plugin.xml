<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    id="com.github.allentv.gfit"
    version="0.0.1">
    <name>GFitPlugin</name>
    <description>Google Fit Plugin</description>
    <license>MIT</license>
    <keywords>cordova,googlefit,health,fitness,fit,gfit</keywords>
    <repo>github.com/allentv/gfit</repo>
    <issue>github.com/allentv/gfit/issues</issue>

	<engines>
    	<engine name="cordova" version=">=3.3.0"/>
	</engines>

    <asset src="www/GFitPlugin.js" target="js/GFitPlugin.js"/>

    <js-module src="www/GFitPlugin.js" name="GFitPlugin">
        <clobbers target="GFitPlugin" />
    </js-module>

    <!-- android -->
    <platform name="android">
	    <framework src="com.google.android.gms:play-services:7.5.0+" />
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="GFitPlugin" >
                <param name="android-package" value="com.github.allentv.gfit.GFitPlugin"/>
                <param name="onload" value="true" />
            </feature>
		    <access origin="https://accounts.google.com/*"/>
        </config-file>
        <source-file src="src/android/GFitPlugin.java" target-dir="src/com/github/allentv/gfit" />
    </platform>

</plugin>
